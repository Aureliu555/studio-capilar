<link rel="stylesheet" href="styles/authentication.css">

<div class="row authentication-page-container">
    <div class="col authentication-container">
        <div class="row">
            <a href="/">
                <img class="authentication-img" src="imgs/brand.png">
            </a>
        </div>
        <div class="row formDiv">
            {{#if error}}
                <span class="error">{{error.message}}</span>
            {{/if}}
            <form action="/login{{redirectUrl}}" method="POST">
                <div>
                    <label for="email">Email</label>
                    <br>
                    <input type="email" name="email" id="email" required>
                </div>
                <div>
                    <label for="password">Password</label>
                    <br>
                    <input type="password" name="password" id="password" required>
                </div>
                <br>
                <button type="submit">Entrar</button>
            </form>
            <span class="question">Ainda n√£o tem uma conta?</span>
            <hr class="separation">
            <a href="/signup{{redirectUrl}}">Criar conta</a>
        </div>
    </div>
</div>